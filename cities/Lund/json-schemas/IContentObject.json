{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "ContentType": {
            "enum": [
                "audio",
                "video"
            ],
            "type": "string"
        },
        "IBeacon": {
            "properties": {
                "distance": {
                    "type": "number"
                },
                "id": {
                    "type": "string"
                },
                "nid": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "nid"
            ],
            "type": "object"
        },
        "IImageUrls": {
            "properties": {
                "large": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "medium": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "thumbnail": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            },
            "type": "object"
        },
        "ILink": {
            "properties": {
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "facebook",
                        "instagram",
                        "spotify",
                        "twitter",
                        "vimeo",
                        "web",
                        "youtube"
                    ],
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "type": "object"
        },
        "ILocation": {
            "properties": {
                "id": {
                    "type": "number"
                },
                "latitude": {
                    "type": "number"
                },
                "links": {
                    "anyOf": [
                        {
                            "items": {
                                "$ref": "#/definitions/ILink"
                            },
                            "type": "array"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "longitude": {
                    "type": "number"
                },
                "openingHourExceptions": {
                    "items": {
                        "$ref": "#/definitions/IOpeningHourException"
                    },
                    "type": "array"
                },
                "openingHours": {
                    "items": {
                        "$ref": "#/definitions/IOpeningHours"
                    },
                    "type": "array"
                },
                "streetAddress": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            },
            "required": [
                "id",
                "latitude",
                "links",
                "longitude",
                "streetAddress"
            ],
            "type": "object"
        },
        "IMediaContent": {
            "properties": {
                "contentType": {
                    "$ref": "#/definitions/ContentType"
                },
                "created": {
                    "format": "date-time",
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "number"
                },
                "modified": {
                    "format": "date-time",
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "contentType",
                "created",
                "description",
                "id",
                "modified",
                "title",
                "url"
            ],
            "type": "object"
        },
        "IOpeningHourException": {
            "properties": {
                "date": {
                    "format": "date-time",
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "date",
                "description"
            ],
            "type": "object"
        },
        "IOpeningHours": {
            "properties": {
                "closed": {
                    "type": "boolean"
                },
                "closing": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "dayNumber": {
                    "enum": [
                        1,
                        2,
                        3,
                        4,
                        5,
                        6,
                        7
                    ],
                    "type": "number"
                },
                "opening": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "weekday": {
                    "type": "string"
                }
            },
            "required": [
                "closed",
                "dayNumber",
                "opening",
                "weekday"
            ],
            "type": "object"
        },
        "PostStatus": {
            "enum": [
                "draft",
                "publish"
            ],
            "type": "string"
        }
    },
    "properties": {
        "audio": {
            "$ref": "#/definitions/IMediaContent"
        },
        "beacon": {
            "$ref": "#/definitions/IBeacon"
        },
        "description": {
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "images": {
            "items": {
                "$ref": "#/definitions/IImageUrls"
            },
            "type": "array"
        },
        "links": {
            "items": {
                "$ref": "#/definitions/ILink"
            },
            "type": "array"
        },
        "location": {
            "$ref": "#/definitions/ILocation"
        },
        "order": {
            "type": "number"
        },
        "postStatus": {
            "$ref": "#/definitions/PostStatus"
        },
        "searchableId": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "video": {
            "$ref": "#/definitions/IMediaContent"
        }
    },
    "required": [
        "id",
        "images",
        "order",
        "postStatus",
        "searchableId",
        "title"
    ],
    "type": "object"
}

